<Window x:Class="BinaryChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryChallenge"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock FontFamily="Google Sans" FontSize="40" HorizontalAlignment="Center" Margin="0,50,0,0">Binary Ones Counter</TextBlock>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,50,0,0">
                <TextBlock FontFamily="Google Sans">Number</TextBlock>
                <TextBox Name="NumberTextBox" Width="150" Margin="15,0,0,0"></TextBox>
            </StackPanel>
            <Button HorizontalAlignment="Center" Padding="5" FontFamily="Google Sans" Margin="0,50,0,0" Click="Button_Click">Count Ones In The Binary</Button>
            <TextBlock Name="DisplayTextBlock" HorizontalAlignment="Center" FontSize="24" FontFamily="Google Sans" Margin="0,50,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
